QPushButton {
    background-color: #4a90d9;
    color: white;
    border: 2px solid transparent;
    border-radius: 15px;
    padding: 10px 20px;
    min-height: 30px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #1d5896;
    border: 2px solid #2a6fb9;
}

QPushButton:pressed {
    background-color: #108f10;
    border: 2px solid #000000;
}